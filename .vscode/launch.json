{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "chrome",
            "request": "launch",
            "name": "Launch Chrome against localhost",
            "url": "http://localhost:5173",
            "webRoot": "${workspaceFolder}",
            "sourceMaps": true,
            "preLaunchTask": "Run_Vite2",
            "sourceMapPathOverrides": {
                "webpack:///./src/*": "${webRoot}/src/*",
                "webpack:///*": "${webRoot}/*",
                "/src/*": "${webRoot}/src/*",
                "webpack:///./main.ts": "${webRoot}/src/main.ts", // For your specific main.ts file
                "/@fs/*": "${webRoot}/*" 
            },
            "skipFiles": [
                "${workspaceFolder}node_modules/**/*.js",
                "<node_internals>/**"
            ]
        }
    ]
}
